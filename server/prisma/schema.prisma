generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  isGuest   Boolean  @default(false)
  createdAt DateTime @default(now())
  scores    Score[]
}

model GameImage {
  id         String     @id @default(cuid())
  title      String
  imageUrl   String
  difficulty String
  characters Character[]
  scores     Score[]
}

model Character {
  id        String   @id @default(cuid())
  name      String
  x         Float
  y         Float
  image     GameImage @relation(fields: [imageId], references: [id])
  imageId   String
}

model Score {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  image     GameImage @relation(fields: [imageId], references: [id])
  imageId   String
  timeTaken Int
  createdAt DateTime @default(now())
}
